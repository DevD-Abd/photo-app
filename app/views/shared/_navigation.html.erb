<nav class="shadow-lg" style="background-color: #1C1C1C;">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo/Brand -->
      <div class="flex-shrink-0">
        <%= link_to root_path, class: "flex items-center" do %>
          <span class="text-2xl font-bold text-white">Photo</span>
          <span class="text-2xl font-bold ml-1" style="color: #D4AF37;">App</span>
        <% end %>
      </div>

      <!-- Navigation Links -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <%= link_to "Home", root_path, 
              class: "text-white hover:text-yellow-400 px-3 py-2 rounded-md text-sm font-medium transition duration-200 #{'border-b-2' if current_page?(root_path)}", 
              style: "#{'border-color: #D4AF37;' if current_page?(root_path)}" %>
          
          <% if user_signed_in? %>
            <%= link_to "Photos", "#", 
                class: "text-white hover:text-yellow-400 px-3 py-2 rounded-md text-sm font-medium transition duration-200" %>
            <%= link_to "Gallery", "#", 
                class: "text-white hover:text-yellow-400 px-3 py-2 rounded-md text-sm font-medium transition duration-200" %>
          <% end %>
        </div>
      </div>

      <!-- User Menu -->
      <div class="hidden md:block">
        <div class="ml-4 flex items-center md:ml-6">
          <% if user_signed_in? %>
            <!-- User Dropdown -->
            <div class="relative">
              <div class="flex items-center space-x-4">
                <span class="text-white text-sm">Welcome, <%= current_user.email.split('@').first.capitalize %></span>
                <div class="relative group">
                  <button class="flex items-center text-white hover:text-yellow-400 transition duration-200 focus:outline-none">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
                    </svg>
                    <svg class="w-4 h-4 ml-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                    </svg>
                  </button>
                  
                  <!-- Dropdown Menu -->
                  <div class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                    <%= link_to edit_user_registration_path, 
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition duration-200" do %>
                      <svg class="w-4 h-4 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                      </svg>
                      Account Settings
                    <% end %>
                    
                    <%= link_to destroy_user_session_path, 
                        data: { "turbo-method": :delete },
                        class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 transition duration-200" do %>
                      <svg class="w-4 h-4 inline mr-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z" clip-rule="evenodd"></path>
                      </svg>
                      Sign Out
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% else %>
            <!-- Auth Links -->
            <div class="flex items-center space-x-4">
              <%= link_to "Sign In", new_user_session_path, 
                  class: "text-white hover:text-yellow-400 px-3 py-2 rounded-md text-sm font-medium transition duration-200" %>
              <%= link_to "Sign Up", new_user_registration_path, 
                  class: "px-4 py-2 rounded-md text-sm font-medium text-white transition duration-200 hover:opacity-90",
                  style: "background-color: #D4AF37;" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button type="button" class="mobile-menu-button text-white hover:text-yellow-400 focus:outline-none focus:text-yellow-400 transition duration-200">
          <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path class="menu-icon" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            <path class="close-icon hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div class="mobile-menu hidden md:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-gray-700">
      <%= link_to "Home", root_path, 
          class: "text-white hover:text-yellow-400 block px-3 py-2 rounded-md text-base font-medium transition duration-200 #{'bg-gray-800' if current_page?(root_path)}" %>
      
      <% if user_signed_in? %>
        <%= link_to "Photos", "#", 
            class: "text-white hover:text-yellow-400 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
        <%= link_to "Gallery", "#", 
            class: "text-white hover:text-yellow-400 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
        
        <div class="border-t border-gray-700 pt-4 pb-3">
          <div class="px-3 mb-3">
            <p class="text-base font-medium text-white"><%= current_user.email.split('@').first.capitalize %></p>
            <p class="text-sm text-gray-400"><%= current_user.email %></p>
          </div>
          <%= link_to "Account Settings", edit_user_registration_path, 
              class: "text-white hover:text-yellow-400 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
          <%= link_to "Sign Out", destroy_user_session_path, 
              data: { "turbo-method": :delete },
              class: "text-white hover:text-yellow-400 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
        </div>
      <% else %>
        <div class="border-t border-gray-700 pt-4 pb-3 space-y-2">
          <%= link_to "Sign In", new_user_session_path, 
              class: "text-white hover:text-yellow-400 block px-3 py-2 rounded-md text-base font-medium transition duration-200" %>
          <%= link_to "Sign Up", new_user_registration_path, 
              class: "block px-3 py-2 rounded-md text-base font-medium text-white transition duration-200 hover:opacity-90",
              style: "background-color: #D4AF37;" %>
        </div>
      <% end %>
    </div>
  </div>
</nav>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    const menuIcon = document.querySelector('.menu-icon');
    const closeIcon = document.querySelector('.close-icon');

    if (mobileMenuButton) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
        menuIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');
      });
    }
  });
</script>
