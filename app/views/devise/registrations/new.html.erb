<div class="min-h-screen" style="background-color: var(--dark-bg);">
  <div class="flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div class="text-center">
        <h2 class="text-3xl font-bold text-white mb-2">Create Account</h2>
        <p class="text-gray-300">Join our premium community</p>
      </div>

      <div class="card p-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div>
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                class: "form-input",
                placeholder: "Enter your email" %>
          </div>

          <div>
            <%= f.label :password, class: "form-label" do %>
              Password
              <% if @minimum_password_length %>
                <span class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
              <% end %>
            <% end %>
            <%= f.password_field :password, 
                autocomplete: "new-password",
                class: "form-input",
                placeholder: "Create a password" %>
          </div>

          <div>
            <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
            <%= f.password_field :password_confirmation, 
                autocomplete: "new-password",
                class: "form-input",
                placeholder: "Confirm your password" %>
          </div>

          <div>
            <%= f.submit "Create Account", class: "btn-primary w-full" %>
          </div>
        <% end %>

        <div class="mt-6">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
