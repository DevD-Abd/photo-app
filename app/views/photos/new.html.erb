<div class="page-container">
  <div class="narrow-wrapper py-8">
    <div class="card p-8">
      <div class="mb-6">
        <h1 class="page-title">Upload New Photo</h1>
        <p class="text-muted">Share your amazing photos with the community</p>
      </div>

      <%= form_with(model: @photo, local: true, multipart: true, class: "space-y-6") do |form| %>
        <% if @photo.errors.any? %>
          <div class="flash-error">
            <div class="flex">
              <svg class="h-5 w-5 text-red-400 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @photo.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :image, class: "form-label" %>
          <div class="upload-area">
            <svg class="mx-auto h-12 w-12 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            <%= form.file_field :image, 
                accept: "image/*",
                class: "hidden", 
                id: "photo_image_input",
                onchange: "previewImage(event)" %>
            <label for="photo_image_input" class="cursor-pointer">
              <span class="text-muted">Click to upload an image</span>
              <p class="text-sm text-gray-500 mt-1">PNG, JPG, GIF, WEBP up to 5MB</p>
            </label>
            <div id="image_preview" class="mt-4 hidden">
              <img id="preview_img" class="max-w-full h-64 mx-auto rounded-lg shadow-md"/>
            </div>
          </div>
        </div>

        <div>
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, 
              class: "form-input",
              placeholder: "Give your photo a title..." %>
        </div>

        <div>
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, 
              rows: 4,
              class: "form-input",
              placeholder: "Tell us about your photo (optional)..." %>
        </div>

        <div class="flex justify-between pt-4">
          <%= link_to photos_path, class: "btn-neutral" do %>
            Cancel
          <% end %>
          <%= form.submit "Upload Photo", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
function previewImage(event) {
  const file = event.target.files[0];
  const preview = document.getElementById('image_preview');
  const previewImg = document.getElementById('preview_img');
  
  if (file) {
    const reader = new FileReader();
    reader.onload = function(e) {
      previewImg.src = e.target.result;
      preview.classList.remove('hidden');
    };
    reader.readAsDataURL(file);
  } else {
    preview.classList.add('hidden');
  }
}
</script>
