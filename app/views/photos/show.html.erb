<div class="page-container">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="card overflow-hidden">
      <!-- Photo Display -->
      <div class="bg-gray-100 flex items-center justify-center" style="min-height: 60vh;">
        <%= image_tag @photo.image, 
            class: "max-w-full max-h-full object-contain",
            alt: @photo.title %>
      </div>
      
      <!-- Photo Details -->
      <div class="p-6">
        <div class="flex justify-between items-start mb-4">
          <div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= @photo.title %></h1>
            <p class="text-muted">
              by <span class="font-medium"><%= @photo.user.email.split('@').first %></span>
              • <%= time_ago_in_words(@photo.created_at) %> ago
            </p>
          </div>
          
          <% if current_user == @photo.user %>
            <div class="flex gap-2">
              <%= link_to edit_photo_path(@photo), 
                  class: "btn-primary gap-2" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Edit
              <% end %>
              <%= link_to photo_path(@photo), 
                  data: { "turbo-method": :delete, "turbo-confirm": "Are you sure you want to delete this photo?" },
                  class: "btn-danger gap-2" do %>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Delete
              <% end %>
            </div>
          <% end %>
        </div>
        
        <% if @photo.description.present? %>
          <div class="mb-6">
            <h3 class="font-semibold text-gray-800 mb-2">Description</h3>
            <p class="text-muted leading-relaxed"><%= simple_format(@photo.description) %></p>
          </div>
        <% end %>
        
        <!-- Photo Metadata -->
        <div class="border-t pt-4">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm text-gray-600">
            <div>
              <span class="font-medium">Uploaded:</span>
              <%= @photo.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </div>
            <div>
              <span class="font-medium">File size:</span>
              <%= number_to_human_size(@photo.image.blob.byte_size) %>
            </div>
            <div>
              <span class="font-medium">Dimensions:</span>
              <% if @photo.image.blob.metadata['width'] && @photo.image.blob.metadata['height'] %>
                <%= @photo.image.blob.metadata['width'] %> × <%= @photo.image.blob.metadata['height'] %> pixels
              <% else %>
                Unknown
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Navigation -->
    <div class="mt-6 flex justify-between">
      <%= link_to photos_path, 
          class: "bg-gray-500 hover:bg-gray-600 text-white px-6 py-3 rounded-lg transition duration-200 flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Gallery
      <% end %>
      
      <%= link_to new_photo_path, 
          class: "bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg transition duration-200 flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Upload Another Photo
      <% end %>
    </div>
  </div>
</div>
