<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <div class="max-w-2xl mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-lg p-8">
      <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-800 mb-2">Edit Photo</h1>
        <p class="text-gray-600">Update your photo details</p>
      </div>

      <!-- Current Photo Preview -->
      <div class="mb-6">
        <h3 class="text-sm font-medium text-gray-700 mb-2">Current Photo</h3>
        <div class="bg-gray-100 rounded-lg p-4 text-center">
          <%= image_tag @photo.image, 
              class: "max-w-full h-auto rounded-lg shadow-md mx-auto",
              alt: @photo.title,
              style: "max-height: 300px;" %>
        </div>
      </div>

      <%= form_with(model: @photo, local: true, multipart: true, class: "space-y-6") do |form| %>
        <% if @photo.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">Please fix the following errors:</h3>
                <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                  <% @photo.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Give your photo a title..." %>
        </div>

        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, 
              rows: 4,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent",
              placeholder: "Tell us about your photo (optional)..." %>
        </div>

        <div>
          <%= form.label :image, "Replace Photo (optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-gray-400 transition duration-200">
            <svg class="mx-auto h-8 w-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            <%= form.file_field :image, 
                accept: "image/*",
                class: "hidden", 
                id: "photo_image_input",
                onchange: "previewImage(event)" %>
            <label for="photo_image_input" class="cursor-pointer">
              <span class="text-gray-600">Click to replace current image</span>
              <p class="text-sm text-gray-500 mt-1">PNG, JPG, GIF, WEBP up to 5MB</p>
            </label>
            <div id="image_preview" class="mt-4 hidden">
              <img id="preview_img" class="max-w-full h-64 mx-auto rounded-lg shadow-md"/>
            </div>
          </div>
        </div>

        <div class="flex justify-between pt-4">
          <%= link_to photo_path(@photo), class: "px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition duration-200" do %>
            Cancel
          <% end %>
          <%= form.submit "Update Photo", 
              class: "px-6 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition duration-200 font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
function previewImage(event) {
  const file = event.target.files[0];
  const preview = document.getElementById('image_preview');
  const previewImg = document.getElementById('preview_img');
  
  if (file) {
    const reader = new FileReader();
    reader.onload = function(e) {
      previewImg.src = e.target.result;
      preview.classList.remove('hidden');
    };
    reader.readAsDataURL(file);
  } else {
    preview.classList.add('hidden');
  }
}
</script>
