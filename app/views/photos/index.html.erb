<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-8">
      <h1 class="text-4xl font-bold text-gray-800">Photo Gallery</h1>
      <%= link_to new_photo_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-lg transition duration-200 flex items-center gap-2" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
        </svg>
        Upload Photo
      <% end %>
    </div>

    <!-- My Photos Section -->
    <% if @photos.any? %>
      <div class="mb-12">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">My Photos</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <% @photos.each do |photo| %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-200">
              <%= link_to photo_path(photo) do %>
                <div class="aspect-square bg-gray-100">
                  <%= image_tag photo.image, 
                      class: "w-full h-full object-cover",
                      alt: photo.title,
                      style: "max-height: 400px;" %>
                </div>
              <% end %>
              <div class="p-4">
                <h3 class="font-semibold text-gray-800 truncate"><%= photo.title %></h3>
                <% if photo.description.present? %>
                  <p class="text-sm text-gray-600 mt-1 line-clamp-2"><%= truncate(photo.description, length: 60) %></p>
                <% end %>
                <div class="flex justify-between items-center mt-3">
                  <span class="text-xs text-gray-500"><%= time_ago_in_words(photo.created_at) %> ago</span>
                  <div class="flex gap-2">
                    <%= link_to edit_photo_path(photo), class: "text-blue-500 hover:text-blue-700" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                    <% end %>
                    <%= link_to photo_path(photo), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, 
                        class: "text-red-500 hover:text-red-700" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="mb-4">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No photos yet</h3>
        <p class="text-gray-500 mb-6">Start building your gallery by uploading your first photo!</p>
        <%= link_to new_photo_path, class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded-lg transition duration-200" do %>
          Upload Your First Photo
        <% end %>
      </div>
    <% end %>

    <!-- Recent Community Photos -->
    <% if @all_photos.any? %>
      <div>
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Recent Community Photos</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <% @all_photos.each do |photo| %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-200">
              <%= link_to photo_path(photo) do %>
                <div class="aspect-square bg-gray-100">
                  <%= image_tag photo.image, 
                      class: "w-full h-full object-cover",
                      alt: photo.title,
                      style: "max-height: 400px;" %>
                </div>
              <% end %>
              <div class="p-4">
                <h3 class="font-semibold text-gray-800 truncate"><%= photo.title %></h3>
                <p class="text-sm text-gray-500">by <%= photo.user.email.split('@').first %></p>
                <span class="text-xs text-gray-400"><%= time_ago_in_words(photo.created_at) %> ago</span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
